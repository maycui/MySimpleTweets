<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.restclienttemplate.TweetDetailsActivity">

    <ImageView
        android:id="@+id/pImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/text"
        android:layout_alignTop="@+id/user"
        android:adjustViewBounds="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/user"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pImage"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screen"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_toEndOf="@+id/pImage"
        android:text="TextView"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pImage"
        android:text="TextView"
        android:autoLink="all"
        android:textSize="25sp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/mediaD"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="300dp"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text"
        android:scaleType="centerCrop"
        app:srcCompat="@color/brightblue" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/rtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/mediaD"
        android:layout_alignStart="@+id/mediaD" />

    <TextView
        android:id="@+id/retweetT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Retweets"
        android:layout_alignBaseline="@+id/rtCount"
        android:layout_alignBottom="@+id/rtCount"
        android:layout_toEndOf="@+id/rtCount" />

    <TextView
        android:id="@+id/likeCount"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mediaD"
        android:layout_toEndOf="@+id/retweetT"
        android:text="TextView" />

    <TextView
        android:id="@+id/likeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mediaD"
        android:layout_toEndOf="@+id/likeCount"
        android:text=" Likes" />
</RelativeLayout>
